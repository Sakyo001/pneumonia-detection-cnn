generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Patient {
  id              String     @id @default(uuid())
  firstName       String     @map("first_name")
  middleName      String?    @map("middle_name")
  lastName        String     @map("last_name")
  referenceNumber String     @unique
  age             Int?
  gender          String?
  doctorId        String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  location        String?
  region          String?
  city            String?
  barangay        String?
  doctor          User       @relation("DoctorToPatient", fields: [doctorId], references: [id])
  xrayScans       XrayScan[]
}

model ScanMetadata {
  id                String   @id @default(uuid())
  scanId            String   @unique
  confidence        Float
  pneumoniaType     String?
  severity          String?
  recommendedAction String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  XrayScan          XrayScan @relation(fields: [scanId], references: [id], onDelete: Cascade)
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  doctorId  String?    @unique
  password  String
  role      UserRole
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  patients  Patient[]  @relation("DoctorToPatient")
  xrayScans XrayScan[] @relation("DoctorToScan")
}

model XrayScan {
  id                String        @id @default(uuid())
  referenceNumber   String        @unique
  patientId         String
  imageUrl          String
  result            String?
  status            String        @default("PENDING")
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  analysisResult    String?
  confidenceScore   Float?
  doctorId          String
  pneumoniaType     String?
  recommendedAction String?
  severity          String?
  letter            String?
  symptoms          String?
  location          String?
  region            String?
  city              String?
  barangay          String?
  metadata          ScanMetadata?
  doctor            User          @relation("DoctorToScan", fields: [doctorId], references: [id])
  patient           Patient       @relation(fields: [patientId], references: [id])
}

enum UserRole {
  ADMIN
  DOCTOR
  PATIENT
}
